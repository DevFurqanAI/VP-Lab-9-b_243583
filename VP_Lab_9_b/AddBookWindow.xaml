<Window x:Class="VP_Lab_9_b.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Book"
        Height="685" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Add New Book"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#2c3e50"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,1" Width="154"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,10">
            <TextBlock Text="Title:"/>
            <TextBox x:Name="txtTitle" Height="25" Margin="0,5,0,10"/>

            <TextBlock Text="Author:"/>
            <TextBox x:Name="txtAuthor" Height="25" Margin="0,5,0,10"/>

            <TextBlock Text="Publisher:"/>
            <TextBox x:Name="txtPublisher" Height="25" Margin="0,5,0,10"/>

            <TextBlock Text="Category:"/>
            <ComboBox x:Name="cmbCategory" Height="25" Margin="0,5,0,10">
                <ComboBoxItem Content="Computer Science"/>
                <ComboBoxItem Content="Literature"/>
                <ComboBoxItem Content="Engineering"/>
                <ComboBoxItem Content="Mathematics"/>
                <ComboBoxItem Content="History"/>
            </ComboBox>

            <TextBlock Text="ISBN:"/>
            <TextBox x:Name="txtISBN" Height="25" Margin="0,5,0,10"/>

            <TextBlock Text="Quantity:"/>
            <TextBox x:Name="txtQuantity" Height="25" Margin="0,5,0,10"/>

            <TextBlock Text="Price:"/>
            <TextBox x:Name="txtPrice" Height="25" Margin="0,5,0,10"/>

            <TextBlock Text="Rack No:"/>
            <TextBox x:Name="txtRackNo" Height="25" Margin="0,5,0,10"/>

            <TextBlock Text="Date Added:"/>
            <DatePicker x:Name="dpDateAdded" Height="25" Margin="0,5,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" Width="280">
            <Button x:Name="btnSave" Content="Save" Width="120" Height="40" Margin="10,0" Background="#27ae60" Foreground="White" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="120" Height="40" Margin="10,0" Background="#e74c3c" Foreground="White" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>

