<Window x:Class="VP_Lab_9_b.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Library Dashboard"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#f0f0f0">

    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="#2c3e50" Foreground="White">
            <MenuItem Header="Books">
                <MenuItem Header="Add Book" Foreground="Black" Click="AddBook_Click"/>
                <MenuItem Header="Update Book" Foreground="Black" Click="UpdateBook_Click"/>
                <MenuItem Header="Delete Book" Foreground="Black" Click="DeleteBook_Click"/>
            </MenuItem>
            <MenuItem Header="Logout" Click="Logout_Click"/>
            <MenuItem Header="Exit" Click="Exit_Click"/>
        </Menu>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search bar -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox x:Name="txtSearch" Width="300" Height="25" Margin="0,0,10,0"/>
                <Button x:Name="btnSearch" Content="Search" Width="100" Height="25" Click="btnSearch_Click"/>
                <Button x:Name="btnClear" Content="Clear" Width="100" Height="25" Margin="10,0,0,0" Click="btnClear_Click"/>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="dgBooks"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserSortColumns="True"
                      SelectionMode="Single"
                      Background="White"
                      BorderBrush="#bdc3c7"
                      BorderThickness="1"
                      Margin="0,10,0,0">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Quantity}" Value="0">
                                <Setter Property="Background" Value="Red"/>
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Quantity}" Value="5">
                                <Setter Property="Background" Value="LightCoral"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Quantity}" Value="4">
                                <Setter Property="Background" Value="LightCoral"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Quantity}" Value="3">
                                <Setter Property="Background" Value="LightCoral"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Quantity}" Value="2">
                                <Setter Property="Background" Value="LightCoral"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Quantity}" Value="1">
                                <Setter Property="Background" Value="LightCoral"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Book ID" Binding="{Binding BookID}" Width="80"/>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="200"/>
                    <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="150"/>
                    <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" Width="150"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120"/>
                    <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="120"/>
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="80"/>
                    <DataGridTextColumn Header="Rack No" Binding="{Binding RackNo}" Width="80"/>
                    <DataGridTextColumn Header="Date Added" Binding="{Binding DateAdded}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</Window>
