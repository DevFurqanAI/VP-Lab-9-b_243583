<Window x:Class="VP_Lab_9_b.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Library Stock Management - Login"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f5f5f5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Library Stock Management System"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#2c3e50"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,0">
            <TextBlock Text="Username:" FontWeight="SemiBold" Foreground="#34495e"/>
            <TextBox x:Name="txtUsername" Width="250" Height="25" Margin="0,5,0,10"/>

            <TextBlock Text="Password:" FontWeight="SemiBold" Foreground="#34495e"/>
            <PasswordBox x:Name="txtPassword" Width="250" Height="25" Margin="0,5,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnLogin"
                    Content="Login"
                    Width="100"
                    Height="35"
                    Margin="10,0"
                    Background="#3498db"
                    Foreground="White"
                    Click="btnLogin_Click"/>

            <Button x:Name="btnExit"
                    Content="Exit"
                    Width="100"
                    Height="35"
                    Margin="10,0"
                    Background="#e74c3c"
                    Foreground="White"
                    Click="btnExit_Click"/>

        </StackPanel>
    </Grid>
</Window>
